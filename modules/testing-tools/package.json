{
  "name": "@repay/testing-tools",
  "version": "0.0.1",
  "description": "Tools to help with testing front-end applications",
  "main": "src/index.js",
  "repository": "https://github.com/repaygithub/ui-tools/tree/master/modules/testing-tools",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.js": "babel-jest"
    },
    "testRegex": "tests/.*\\.test\\.js",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "testcafe": "^1.8.6"
  },
  "peerDependencies": {
    "testcafe": "^1.0.0"
  }
}
