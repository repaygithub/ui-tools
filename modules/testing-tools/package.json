{
  "name": "@repay/testing-tools",
  "version": "0.1.4",
  "description": "Tools to help with testing front-end applications",
  "main": "src/index.js",
  "repository": "https://github.com/repaygithub/ui-tools/tree/master/modules/testing-tools",
  "license": "MIT",
  "bin": {
    "testing-tools": "bin/testing-tools"
  },
  "keywords": [
    "cli",
    "testing-tools"
  ],
  "scripts": {
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.js": "babel-jest"
    },
    "testRegex": "tests/.*\\.test\\.js",
    "setupFilesAfterEnv": ["./tests/setup.js"],
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "reporters": [
      "default",
      [
        "jest-sonar",
        {
          "outputDirectory": ".",
          "outputName": "test-report.xml"
        }
      ]
    ]
  },
  "dependencies": {
    "arg": "^5.0.1",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "jest": "^27.3.1",
    "jest-sonar": "^0.2.12",
    "testcafe": "^1.16.1"
  },
  "peerDependencies": {
    "testcafe": "^1.9.4"
  }
}
