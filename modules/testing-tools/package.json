{
  "name": "@repay/testing-tools",
  "version": "0.1.0",
  "description": "Tools to help with testing front-end applications",
  "main": "src/index.js",
  "repository": "https://github.com/repaygithub/ui-tools/tree/master/modules/testing-tools",
  "license": "MIT",
  "bin": {
    "testing-tools": "bin/testing-tools"
  },
  "keywords": [
    "cli",
    "testing-tools"
  ],
  "scripts": {
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.js": "babel-jest"
    },
    "testRegex": "tests/.*\\.test\\.js",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "dependencies": {
    "arg": "^5.0.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "testcafe-browser-provider-browserstack": "^1.13.1"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "testcafe": "^1.9.4"
  },
  "peerDependencies": {
    "testcafe": "^1.9.4"
  }
}
